<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">                                                                                                                                          
	<Dialog id="exceptionsDialog" contentWidth="500px" title="Item Exceptions" state="Error">                                                                                                                                                                     
		<content>                                                                                                                                                                                                                                                    
			<List id="exceptionsList" width="auto" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}"                                                                                                                     
				items="{path: 'worklistReviewItemExceptions'}">                                                                                                                                                                                                            
				<StandardListItem title="{exception}" description="{exceptionMessage}" icon="sap-icon://error" iconInset="false"/>                                                                                                                                         
			</List>                                                                                                                                                                                                                                                     
		</content>                                                                                                                                                                                                                                                   
		<buttons>                                                                                                                                                                                                                                                    
			<Button id="exceptionsCloseButton" text="Close" press="onExceptionsDialogClose"/>                                                                                                                                                                           
		</buttons>                                                                                                                                                                                                                                                   
	</Dialog>                                                                                                                                                                                                                                                     
</core:FragmentDefinition>                                                                                                                                                                                                                                     