<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">                                                                                                                                          
	<Dialog id="messagesDialog" title="Messages" resizable="false" contentHeight="300px" showHeader="false" contentWidth="500px"                                                                                                                                  
		verticalScrolling="false">                                                                                                                                                                                                                                   
		<content>                                                                                                                                                                                                                                                    
			<MessageView items="{ path: '/messages' }">                                                                                                                                                                                                                 
				<items>                                                                                                                                                                                                                                                    
					<MessageItem type="{type}" title="{title}" description="{description}"/>                                                                                                                                                                                  
				</items>                                                                                                                                                                                                                                                   
			</MessageView>                                                                                                                                                                                                                                              
		</content>                                                                                                                                                                                                                                                   
		<buttons>                                                                                                                                                                                                                                                    
			<Button id="messagesCloseButton" text="Close" press="onMessagesDialogClose"/>                                                                                                                                                                               
		</buttons>                                                                                                                                                                                                                                                   
	</Dialog>                                                                                                                                                                                                                                                     
</core:FragmentDefinition>                                                                                                                                                                                                                                     